<h2>Games</h2>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Word</th>
      <th>User won</th>
      <th>Number of wrong guesses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user %></td>
        <td><%= game.word %></td>
        <td><%= game.user_won %></td>
        <td><%= game.num_wrong_guesses %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
